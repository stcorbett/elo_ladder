- @page_title = "Log in"

%h2 Log in
.span-9.colborder
  - form_for @user_session do |f|
    %p
      = f.label :email, "Email address"
      = error_messages @user_session, :email
      %br
      = f.text_field :email
    %p
      = f.label :password
      = error_messages @user_session, :password
      %br
      = f.password_field :password
    %p= f.submit "Log in"

.span-14.last
  %p= link_to "Forgot your password?", new_password_reset_path