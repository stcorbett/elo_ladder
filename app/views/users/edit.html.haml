%h2= @page_title = "Edit profile"
- form_for @user do |f|
  %p
    = f.label :name, "Name"
    %br
    = f.text_field :name
  %p
    = f.label :email, "Email address"
    %br
    = f.text_field :email
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
  %p= f.submit "Save"